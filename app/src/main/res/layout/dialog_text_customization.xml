<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="8dp"
    android:paddingHorizontal="12dp"
    >

    <!-- Font size customization -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_light"
        android:text="Font Size" />

    <SeekBar
        android:id="@+id/fontSizeSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="40"
        android:progress="18" />

    <!-- Font style customization -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/poppins_light"
        android:text="Font Style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fontBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/button_bg"
            android:padding="0dp"
            android:text="Bold"
            android:textSize="16dp"
            android:textStyle="bold"
            app:backgroundTint="@color/dark_green" />


        <Button
            android:id="@+id/fontItalic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/button_bg"
            android:padding="0dp"
            android:text="Italic"
            android:textSize="16dp"
            android:textStyle="italic"
            app:backgroundTint="@color/dark_green" />

        <Button
            android:id="@+id/fontNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/button_bg"
            android:padding="0dp"
            android:text="Normal"
            android:textSize="16dp"
            app:backgroundTint="@color/dark_green" />
    </LinearLayout>


    <!-- Font Family customization -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/poppins_light"
        android:text="Font Family" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

    <!-- Text color customization -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fontPoppins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:fontFamily="@font/poppins"
            android:padding="0dp"
            android:text="Poppins"
            android:textSize="16dp"
            android:textColor="@color/royal"
            style="@style/Widget.Material3.Button.OutlinedButton"
             />


        <Button
            android:id="@+id/fontAmarante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:fontFamily="@font/amarante"
            android:padding="0dp"
            android:text="Amarante"
            android:textSize="16dp"
            android:textColor="@color/royal"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <Button
            android:id="@+id/fontBaloo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:fontFamily="@font/baloo"
            android:padding="0dp"
            android:text="Baloo"
            android:textSize="16dp"
            android:textColor="@color/royal"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <Button
            android:id="@+id/fontCharm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:fontFamily="@font/charm"
            android:padding="0dp"
            android:text="Charm"
            android:textSize="16dp"
            android:textColor="@color/royal"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <Button
            android:id="@+id/fontAndika"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:fontFamily="@font/andika_new_basic"
            android:padding="0dp"
            android:text="Andika"
            android:textColor="@color/royal"
            android:textSize="16dp" />


        <Button
            android:id="@+id/fontEwert"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:fontFamily="@font/ewert"
            android:padding="0dp"
            android:text="Ewert"
            android:textColor="@color/royal"
            android:textSize="16dp" />

        <Button
            android:id="@+id/fontChicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:fontFamily="@font/chicle"
            android:padding="0dp"
            android:text="Chicle"
            android:textSize="16dp"
            android:textColor="@color/royal"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <Button
            android:id="@+id/fontNova"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:fontFamily="@font/nova_round"
            android:padding="0dp"
            android:text="Nova"
            android:textColor="@color/royal"
            android:textSize="16dp" />



    </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/poppins_light"
        android:text="Text Color" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:id="@+id/colorGreyText"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@color/grey" />


        <View
            android:id="@+id/colorPeachText"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@color/peach" />

        <View
            android:id="@+id/colorTeaText"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@color/tea" />

        <View
            android:id="@+id/colorWhiteText"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@color/white" />

        <View
            android:id="@+id/colorPinkText"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@color/pink" />

  <View
            android:id="@+id/colorGreenText"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@color/green1" />


        <View
            android:id="@+id/colorYellowText"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@color/amber" />

        <View
            android:id="@+id/colorOrangeText"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@color/orange" />

        <View
            android:id="@+id/colorPurpleText"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@color/purple" />

        <View
            android:id="@+id/colorWheatText"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@color/wheat" />

        <View
            android:id="@+id/colorBlueText"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@color/dark_blue" />



        <View
            android:id="@+id/colorRedText"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@color/red" />

        <View
            android:id="@+id/colorRoyalText"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@color/royal" />

        <View
            android:id="@+id/colorBlackText"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@color/black" />


        <!-- Add more color options as needed -->
    </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>